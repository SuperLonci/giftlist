// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  lists     List[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model List {
  id          String    @id @default(uuid())
  title       String
  description String?
  imageUrl    String?
  endDate     DateTime?
  items       Item[]
  creatorId   String
  creator     User      @relation(fields: [creatorId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Item {
  id          String     @id @default(uuid())
  name        String
  description String?
  link        String?
  imageUrl    String?
  price       Float?
  currency    String
  itemStatus  ItemStatus @default(AVAILABLE)
  gifterNames String
  listId      String
  list        List       @relation(fields: [listId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum ItemStatus {
  TAKEN
  GIFTED
  GIFT_WITH_ME
  AVAILABLE
  UNAVAILABLE
}
